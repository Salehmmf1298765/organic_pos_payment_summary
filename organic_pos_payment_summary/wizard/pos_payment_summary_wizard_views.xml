<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_pos_payment_summary_wizard_form" model="ir.ui.view">
            <field name="name">pos.payment.summary.wizard.form</field>
            <field name="model">organic.pos.payment.summary.wizard</field>
            <field name="arch" type="xml">
                <form string="POS Payment Summary" create="false">
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                        </group>
                        <group>
                            <field name="config_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="session_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="payment_method_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="group_by_session"/>
                            <field name="group_by_config"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_print_pdf" string="Print PDF" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_pos_payment_summary_wizard" model="ir.actions.act_window">
            <field name="name">POS Payment Summary</field>
            <field name="res_model">organic.pos.payment.summary.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_pos_payment_summary_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_pos_payment_summary"
                  name="Payment Summary (Method)"
                  parent="point_of_sale.menu_point_rep"
                  action="action_pos_payment_summary_wizard"
                  sequence="15"/>
    </data>
</odoo>
